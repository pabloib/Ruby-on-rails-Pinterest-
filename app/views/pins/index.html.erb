<div class="container">
  <h1>Crear un nuevo pin</h1>
  <table>
    <thead>
      <tr>
        <th>Photo</th>
        <th>Description</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <td><%= image_tag (pin.photo), :style => "width:300px" %></td>
          <td><%= pin.description %></td>
          <td><%= link_to 'Show', pin %></td>
          <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
          <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pin', new_pin_path %>
</div>